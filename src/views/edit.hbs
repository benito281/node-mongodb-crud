      <div class="card w-50 mx-auto">
        <div class="card-header">
          <h4 class="text-center">Edit task</h4>
        </div>
        <div class="card-body">
          <form action="/task/edit/{{task._id}}" method="POST">
            <div class="form-group my-2">
              <input
                type="text"
                name="title"
                class="form-control"
                placeholder="Title"
                value="{{task.title}}"
              />
            </div>
            <div class="form-group my-2">
                <textarea name="description" rows="3" placeholder="Description" class="form-control" > {{task.description}} </textarea>
            </div>
            <button type="submit" class="btn btn-warning mx-auto">Update task</button>
          </form>
        </div>
      </div>
    </div>